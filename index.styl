///
/// Field Styles.
///


@require "styles/reset"
@require "styles/util"


/// Vars.
json('manifest.json')

// public.
$field-lh   = field-line-height
$field-fz   = field-font-size
$field-bdrz = field-border-radius
$field-bdc  = field-border-color
$field-pc   = field-color //#673ab7 //#57c5f7
$area-col   = area-min-col

// disabled.
$field-bgc-disabled = #eee
$field-cc-disabled  = #bbb

// dark theme.
$field-bgc-dark = #2a2a2a
$field-cc-dark  = #AFAFAF


/// Field preset

field-reset()
  reset-space()
  reset-font()
  reset-theme()


field-preset()
  box bdbox
  lh $field-lh
  fz $field-fz
  w 100%


field-basic()
  field-reset()
  field-preset()

  &:focus
    outline 0

  &[disabled]
    cc  $field-cc-disabled
    cur not-allowed


area()
  &-area
    mih $area-col * 1em
    resize no

/// Call the default exports.

field-basic-export(se = "field")
  .{se}
    field-basic()
    area()


/// Includes all the styles.

@require "styles/*"